<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SignupLayoutActivity">

    <!-- Top Section with Search Bar and Logo -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Search products..."
            android:inputType="text"
            android:padding="16dp"
            android:paddingEnd="48dp"
            android:background="@drawable/search_bar_rounded_bg"
            android:textColorHint="#666666"
            android:textColor="#000000" />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search"
            android:layout_marginEnd="16dp"
            android:tint="#666666" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Scrollable Product List -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/product_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#7EC8E3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Product Image -->
                    <ImageView
                        android:id="@+id/product_image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sc1"
                        android:scaleType="centerCrop"
                        android:contentDescription="Product 1"
                        android:background="@drawable/product_image_bg" />

                    <!-- Product Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/product_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VITAMIN C TABLETS"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/product_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$24.99"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Star Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="Star Rating"
                            android:tint="#FFD700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Product Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/product_card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#7EC8E3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Product Image -->
                    <ImageView
                        android:id="@+id/product_image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sc2"
                        android:scaleType="centerCrop"
                        android:contentDescription="Product 2"
                        android:background="@drawable/product_image_bg" />

                    <!-- Product Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/product_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PAIN RELIEF CAPSULES"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/product_price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$19.99"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Star Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="Star Rating"
                            android:tint="#FFD700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.6"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Product Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/product_card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#7EC8E3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Product Image -->
                    <ImageView
                        android:id="@+id/product_image3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/sc3"
                        android:scaleType="centerCrop"
                        android:contentDescription="Product 3"
                        android:background="@drawable/product_image_bg" />

                    <!-- Product Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/product_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IMMUNITY BOOSTER SYRUP"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/product_price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$29.99"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Star Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="Star Rating"
                            android:tint="#FFD700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation with Back Arrow -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_white_bg"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/circular_button_bg"
            android:contentDescription="Back"
            android:padding="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






