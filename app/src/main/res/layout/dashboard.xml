<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F2FF"
    tools:context=".DashboardActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madhawa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintStart_toStartOf="@id/welcome_text" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/medigologo"
        android:contentDescription="MEDIGO Logo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Search"
        android:inputType="text"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/search_bar_bg"
        android:textColorHint="#6A0DAD"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Banner Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dash1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Banner Image" />

                <Button
                    android:id="@+id/shop_now_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Now"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shop_now_button_bg"
                    android:padding="12dp"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="16dp" />

            </FrameLayout>

            <!-- Categories Section -->
            <TextView
                android:id="@+id/categories_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginBottom="24dp">

                <!-- Vitamins -->
                <TextView
                    android:id="@+id/vitamins_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Vitamins"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_pink_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Prescription -->
                <TextView
                    android:id="@+id/prescription_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Prescription"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_yellow_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Personal -->
                <TextView
                    android:id="@+id/personal_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="PERSONAL"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_green_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Baby & Mother -->
                <TextView
                    android:id="@+id/baby_mother_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="Baby And Mother"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_lavender_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Pet Care -->
                <TextView
                    android:id="@+id/pet_care_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="PET CARE"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_light_blue_bg"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Diabetics -->
                <TextView
                    android:id="@+id/diabetics_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="DIABETICS"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/category_light_cyan_bg"
                    android:clickable="true"
                    android:focusable="true" />

            </GridLayout>

            <!-- Popular Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/popular_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/see_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="14sp"
                    android:textColor="#0066CC"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Popular Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/popular_item1"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dash1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Popular Item 1"
                    android:background="@drawable/popular_item_bg"
                    android:layout_margin="8dp" />

                <ImageView
                    android:id="@+id/popular_item2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dash2"
                    android:scaleType="centerCrop"
                    android:contentDescription="Popular Item 2"
                    android:background="@drawable/popular_item_bg"
                    android:layout_margin="8dp" />

                <ImageView
                    android:id="@+id/popular_item3"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dash3"
                    android:scaleType="centerCrop"
                    android:contentDescription="Popular Item 3"
                    android:background="@drawable/popular_item_bg"
                    android:layout_margin="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Icon -->
        <LinearLayout
            android:id="@+id/home_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#2E2E8C"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#2E2E8C"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Cart Icon -->
        <LinearLayout
            android:id="@+id/cart_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shopping_cart"
                app:tint="#000000"
                android:contentDescription="Cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Icon -->
        <LinearLayout
            android:id="@+id/profile_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="#000000"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






